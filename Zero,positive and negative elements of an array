#include<stdio.h>
int main()
{
    int n;
    scanf("%i",&n);
    int a[n];
    for(int i=0;i<n;i++)
    {
        scanf("%i",&a[i]);
    }
    int x=0,y=0,z=0;
    for(int i=0;i<n;i++)
    {
        if(a[i]<0)
        x++;
        else if(a[i]>0)
        y++;
        else if(a[i]==0)
        z++;
    }
    printf("Positive no. of elements in array are %i and negative no. of elements in array are %i and zero elements are %i",y,x,z);
    return 0;
}
