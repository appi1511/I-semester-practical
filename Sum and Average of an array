#include<stdio.h>
int main()
{
    int n;
    scanf("%i",&n);
    int a[n];
    for(int i=0;i<n;i++)
    scanf("%i",&a[i]);
    int t=0;
    for(int i=0;i<n;i++)
    {
        t=t+a[i];
    }
    float k;
    k=(float)t/n;
    printf("The sum of elements is %i and the average of elements is %.2f",t,k);
    return 0;
}
